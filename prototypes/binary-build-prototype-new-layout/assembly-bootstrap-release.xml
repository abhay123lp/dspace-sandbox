<assembly>
	<id>bootstrap</id>
	<formats>
		<format>dir</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>
    <baseDirectory>dspace-release</baseDirectory>
  <files>
    <file>
      <source>pom.xml</source>
    </file>
  </files>
  
	<fileSets>
		<fileSet>
		    <directory>dspace</directory>
			<excludes>
				<exclude>target/**</exclude>
			</excludes>
		</fileSet>
	</fileSets>

	<moduleSets>
		<moduleSet>
			<includes>
				<include>org.dspace:dspace-jspui</include>
				<include>org.dspace:dspace-xmlui</include>
				<include>org.dspace:dspace-oai</include>
				<include>org.dspace:dspace-lni</include>
			</includes>
			<sources>
				<fileSets>
					<fileSet>
						<excludes>
							<exclude>target/**</exclude>
						</excludes>
					</fileSet>
				</fileSets>
			</sources>
		</moduleSet>
	</moduleSets>

</assembly>