<?xml version="1.0" encoding="UTF-8"?>
<web-app id="dspace-srw" version="2.4"
  xmlns="http://java.sun.com/xml/ns/j2ee"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd">
  <display-name>SRW/U Service</display-name>
  
  <context-param>
    <description>
      The location of the main DSpace configuration file
    </description>
    <param-name>dspace-config</param-name>
    <param-value>${dspace.dir}/config/dspace.cfg</param-value>
  </context-param>
  
  <servlet>
    <servlet-name>SRWServlet</servlet-name>
    <servlet-class>
        ORG.oclc.os.SRW.SRWServlet
    </servlet-class>
    <!--init-param>
      <param-name>PropertiesFile</param-name>
      <param-value>webapps/SRW/SRWServer.propss</param-value>
    </init-param-->
    <!--load-on-startup>100</load-on-startup-->
  </servlet>

  <servlet-mapping>
    <servlet-name>SRWServlet</servlet-name>
    <url-pattern>/search/*</url-pattern>
  </servlet-mapping>

  <!-- currently the W3C havent settled on a media type for WSDL;
    http://www.w3.org/TR/2003/WD-wsdl12-20030303/#ietf-draft
    for now we go with the basic 'it's XML' response -->
  <mime-mapping>
    <extension>wsdl</extension>
     <mime-type>text/xml</mime-type>
  </mime-mapping>
  

  <mime-mapping>
    <extension>xsd</extension>
    <mime-type>text/xml</mime-type>
  </mime-mapping>

  <welcome-file-list id="WelcomeFileList">
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.jsp</welcome-file>
    <welcome-file>index.jws</welcome-file>
  </welcome-file-list>

</web-app>
